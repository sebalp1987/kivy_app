WindowManager:
    MainWindow:

    SecondWindow:

    ThirdWindow:

<Button>:
    font_size: 10
    background_color : (1,1,1,0) if self.state == 'normal' else (0,0,0,0.7)



<MainWindow>:
    name: "main"


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'source/background.jpg'

        Color:
            rgba: 1, 1, 1, 0.7
        Rectangle:
            pos: (0, 1)
            size: self.width, 70
        Color:
            rgba: 1, 1, 1, 1

        Rectangle:
            pos: (0, 550)
            size: self.width, 70




    FloatLayout:
        cols:2

        Button:
            id: "upload"
            size_hint: 0.2, 0.1
            pos_hint : {'x' : 0.1 , 'y' : 0.005}
            center: self.parent.center

            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
            Image:
                source: 'source/upload.png'
                stretch: True
                size: self.parent.size
                pos: self.parent.pos

        Button:
            id: "picture"
            size_hint: 0.2, 0.1
            pos_hint : {'x' : 0.7 , 'y' : 0.005}
            center: self.parent.center
            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "left"
            Image:
                source: 'source/picture.png'
                stretch: True
                size: self.parent.size
                pos: self.parent.pos



<SecondWindow>:
    name: "second"
    FileChooserIconView:
        canvas.before:
            Color:
                rgb: 0.5, 0.4, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 0.7
            Rectangle:
                pos: (0, 1)
                size: self.width, 70
        on_selection: root.btn(*args)



        Button:
            id: "picture"
            size_hint: 0.2, 0.1
            pos_hint : {'x' : 0.7 , 'y' : 0.005}
            center: self.parent.center
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
            Image:
                source: 'source/back.png'
                stretch: True
                size: self.parent.size
                pos: self.parent.pos

<ThirdWindow>:
    name: "third"
    GridLayout:
        cols: 2
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Button:
            text: "Press"
            on_release: root.btn()

